{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "types": ["node", "chrome"],
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": false,
    "noEmit": false,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "declaration": false,
    "paths": {
      "@src/*": ["src/*"],
      "@assets/*": ["src/assets/*"],
      "@pages/*": ["src/pages/*"]
    }
  },
  "include": ["src", "utils", "public/_locales/**/*.json", "package.json"],
  "references": [
    {
      "path": "../common"
    }
  ]
}
