{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "types": ["vite/client", "node", "chrome", "vite-plugin-svgr/client"],
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@assets/*": ["src/assets/*"],
      "@pages/*": ["src/pages/*"]
    },
    "composite": true
  },
  "include": [
    "src",
    "utils",
    "public/_locales/**/*.json",
    "vite.config.ts",
    "vite.config.base.ts",
    "package.json"
  ],
}
